{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfigPath": "nixpacks.toml"
    },
    "deploy": {
        "startCommand": ". /opt/venv/bin/activate && gunicorn backend.main:app -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT --workers 2 --timeout 120",
        "healthcheckPath": "/api/dashboard/kpi",
        "healthcheckTimeout": 30,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5
    }
}